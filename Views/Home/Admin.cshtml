@{
    ViewData["Title"] = "Admin Page";
}


<!-- Customer Lookup Form-->
@model CustomerModel

<div>
    <h1 class="mt-2">Customer Search</h1>
</div>

<form class="row g-3 mt-2" method="post">
  <div class="col-md-3">
    <input type="number" class="form-control" id="customerID" placeholder="Customer ID" min="1" max="20" asp-for="CustomerId">
  </div>
  <div class="col-md-3">
    <input type="text" class="form-control" id="customerFirstName" placeholder="First Name" asp-for="FirstName">
  </div>
  <div class="col-md-3">
    <input type="text" class="form-control" id="customerLastName" placeholder="Last Name" asp-for="LastName">
  </div>
  <div class="col-md-3">
    <input type="number" class="form-control" id="addressID" placeholder="Address ID" min="1" max="20" asp-for="AddressId">
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
