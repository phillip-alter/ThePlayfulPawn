@{
    ViewData["Title"] = "Board Game Search";
}
@model BGSearchModel

<div>
    <h1 class="mt-2">Board Game Search</h1>
</div>
<form class="row g-3 mt-2" method="post">
  <div class="col-md-3">
    <input type="text" class="form-control" id="inputBGName" placeholder="Board Game Name" asp-for="InputBGName">
  </div>
  @* <div class="col-md-3">
    <input type="text" class="form-control" id="inputBGVendor" placeholder="Publisher">
  </div> *@
  <div class="col-md-2">
    <input type="number" class="form-control" id="inputPlayerCount" placeholder="Max Players" min="1" max="12" asp-for="InputPlayerCount">
  </div>
  <div class="col-12">
    <button type="search" class="btn btn-primary" method="post">Search</button>
  </div>
</form>
<hr />
<table class="table table-dark table-striped table-bordered">
    <thead>
        <th>
            Board Game Name
        </th>
        <th>
            Description
        </th>
        @* <th>
            Publisher
        </th> *@
        <th>
            Max Players
        </th>
        <th>
            Price
        </th>
    </thead>
    @* Temporary code until the class for the board games db stuff is set up *@
    <tbody>
        @{
            foreach (var game in @Model.Games)
            {
                <tr>
                    <td>
                        @game.GameName
                    </td>
                    <td>
                        @game.Description
                    </td>
                    @* <td>
                        @game.Publisher
                    </td> *@
                    <td>
                        @game.MaxPlayerCount
                    </td>
                    <td>
                        @game.Price.ToString("C")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>